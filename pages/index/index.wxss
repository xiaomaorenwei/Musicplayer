.container {
  padding: 0;
  background: #f5f7fa;
  min-height: 100vh;
}

.header {
  background: var(--background-gradient);
  padding: 40rpx 40rpx 60rpx;
  border-radius: 0 0 40rpx 40rpx;
  margin-bottom: 40rpx;
}

.title {
  color: white;
  font-size: 48rpx;
  font-weight: 600;
}

.music-list {
  width: 100%;
  padding: 20rpx;
}

.music-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 10rpx;
}

.music-item:active {
  transform: scale(0.98);
}

.music-cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.music-info {
  flex: 1;
}

.music-name {
  font-size: 32rpx;
  color: #333;
  display: block;
}

.music-artist {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-top: 10rpx;
}

.play-icon {
  width: 60rpx;
  height: 60rpx;
  opacity: 0.6;
}

.play-icon image {
  width: 100%;
  height: 100%;
}

.search-box {
  margin: 20rpx 0;
  padding: 0 20rpx;
}

.search-input {
  background: rgba(255, 255, 255, 0.9);
  padding: 16rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  padding: 20rpx 30rpx;
  color: #333;
}

.favorite-icon {
  width: 48rpx;
  height: 48rpx;
  padding: 10rpx;
}

.favorite-icon image {
  width: 100%;
  height: 100%;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
}

.search-results {
  margin-top: 20rpx;
}

.favorite-section {
  margin-top: 30rpx;
}

.recommend-section {
  margin-top: 30rpx;
}